<world>
	<!-- a world can have a camera, a set of lights, and a single group -->

	<camera>
		<position x="4" y="4" z="6" />
		<lookAt x="0" y="0" z="0" />
		<up x="0" y="1" z="0" />
		<!-- optional, use these values as default-->
		<projection fov="60" near="1" far="1000" />
		<!-- optional, use these values as default-->
	</camera>

	<group>
		<transform>
			<translate x="0" y="0" z="0" />
		</transform>
		<group>
			<transform>
                <translate x="0" y="0" z="0" />
			</transform>
			<models>
				<model file="cone.3d" />
			</models>
		</group>
	</group>
</world>