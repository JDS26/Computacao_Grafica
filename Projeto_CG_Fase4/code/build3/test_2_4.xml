<world> <!-- a world can have a camera, a set of lights, and a single group -->
    
    <camera> 
        <position x="5" y="10" z="4" />
        <lookAt x="5" y="0" z="0" />
        <up x="0" y="1" z="0" /> <!-- optional, use these values as default-->
        <projection fov="60" near="1" far="1000" /> <!-- optional, use these values as default-->
    </camera>

    <group>
        <transform> 
            <translate x="0" y="0" z="0" />
        </transform>
        <group> 
            <transform> 
                <translate x="5" y="0" z="0" />
                <rotate angle="23" x="0" y="0" z="1" />
                <scale x="0.3" y="0.3" z="0.3" />
            </transform>
            <models> 
                <model file="sphere.3d" /> <!-- generator sphere 8 8 1 sphere.3d -->
            </models>
            <group> 
                <transform> 
                    <translate x="0.920" y="-0.39" z="0" />
                    <rotate angle="-17.9" x="0" y="0" z="1" />
                    <scale x="0.1" y="0.1" z="0.1" />
                </transform>
                <models> 
                    <model file="sphere.3d" /> <!-- generator sphere 8 8 1 sphere.3d -->
                </models>
            </group>
        </group>
    </group>
</world>